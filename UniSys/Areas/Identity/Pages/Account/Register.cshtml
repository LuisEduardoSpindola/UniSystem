@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<br></br>
<br></br>
<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center">Criar nova conta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.ImagePath"></label>
                <input asp-for="Input.ImagePath" type="file" class="form-control" />
                <span asp-validation-for="Input.ImagePath" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Name">Nome</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Registration" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Registration">Matrícula</label>
                        <span asp-validation-for="Input.Registration" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Course" class="form-select text-start" autocomplete="username" aria-required="true">
                            <option value="">Curso</option>
                            <option value="Curso 1">Sistemas de Informação</option>
                            <option value="Curso 2">Engenharia Civil</option>
                            <option value="Curso 2">Engenharia Elétrica</option>
                            <option value="Curso 3">Arquitetura e Urbanismo</option>
                            <option value="Curso 2">Direito</option>
                            <option value="Curso 3">Psicologia</option>
                        </select>
                        <span asp-validation-for="Input.Course" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Period" class="form-select text-start" autocomplete="username" aria-required="true">
                            <option value="">Período</option>
                            <option value="1º Período">1º Período</option>
                            <option value="2º Período">2º Período</option>
                            <option value="3º Período">3º Período</option>
                            <option value="3º Período">4º Período</option>
                            <option value="3º Período">5º Período</option>
                            <option value="3º Período">6º Período</option>
                            <option value="3º Período">7º Período</option>
                            <option value="3º Período">8º Período</option>
                            <option value="3º Período">9º Período</option>
                            <option value="3º Período">10º Período</option>
                        </select>
                        <span asp-validation-for="Input.Period" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Cadastrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
